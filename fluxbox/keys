# desktop bindings
ondesktop mouse1 :hidemenus
ondesktop mouse2 :clientmenu (workspace=[current])
ondesktop mouse3 :rootmenu
ondesktop mouse4 :nextworkspace
ondesktop mouse5 :prevworkspace

# toolbar bindings
ontoolbar mouse4 :nextworkspace
ontoolbar mouse5 :prevworkspace

# titlebar bindings
ontitlebar mouse1 :macrocmd {focus} {raise} {activatetab}
ontitlebar move1 :startmoving
ontitlebar mouse2 :starttabbing
ontitlebar double mouse1 :close
ontitlebar shift mouse1 :minimize
ontitlebar mouse4 :minimize
ontitlebar mouse3 :windowmenu

# window bindings
onleftgrip move1 :startresizing bottomleft
onrightgrip move1 :startresizing bottomright
onwindowborder move1 :startmoving
onwindow mod1 mouse1 :macrocmd {raise} {focus} {startmoving}
onwindow mod1 mouse2 :starttabbing
onwindow mod1 mouse3 :macrocmd {raise} {focus} {startresizing nearestcorner}

# mouse bindings
mod4 mouse1 :hidemenus
mod4 mouse2 :togglecmd {clientmenu (workspace=[current])} {hidemenus}
mod4 mouse3 :togglecmd {rootmenu} {hidemenus}
mod4 mouse4 :prevworkspace
mod4 mouse5 :nextworkspace

# rotation bindings
mod1 Tab :nextgroup (workspace=[current])
mod1 shift Tab :prevgroup (workspace=[current])
mod4 Tab :nextgroup (workspace=[current]) (class=[current])
mod4 shift Tab :prevgroup (workspace=[current]) (class=[current])
mod4 shift Left :movetableft
mod4 shift Right :movetabright

# window bindings
#mod4 w mod4 a :togglecmd {showdesktop} {deiconify all originquiet}
#mod4 w mod4 b :toggledecor
#mod4 w mod4 d :macrocmd {detachclient} {move 20 20}
#mod4 w mod4 h :maximizehorizontal
#mod4 w mod4 k :stick
#mod4 w mod4 l :foreach {macrocmd {raise} {focus}} {matches (class=[current])}
#mod4 w mod4 n :minimize
#mod4 w mod4 r :reconfigure
#mod4 w mod4 s :shade
#mod4 w mod4 v :maximizevertical
#mod4 w mod4 w :windowmenu

# window position bindings
mod4 o mod4 a :deiconify all originquiet
mod4 o mod4 c :commanddialog
mod4 o mod4 d :showdesktop
mod4 o mod4 f :fullscreen
mod4 o mod4 m :maximize
mod4 o mod4 n :minimize
mod4 o mod4 8 :moveto 1% 1% topleft
mod4 o mod4 i :if {matches (gvim)} {macrocmd {moveto 1% 2% topleft}} {moveto 1% 0 left}
mod4 o mod4 k :moveto 1% 1% bottomleft
mod4 o mod4 o :if {matches (gvim)} {macrocmd {moveto 0 0 center}} {moveto 0 0 center}
mod4 o mod4 0 :moveto 1% 1% topright
mod4 o mod4 p :if {matches (gvim)} {macrocmd {moveto 1% 2% topright}} {moveto 1% 0 right}
mod4 o mod4 semicolon :moveto 1% 1% bottomright

# workspace bindings
mod1 F1 :workspace 1
mod1 F2 :workspace 2
mod1 F3 :workspace 3
mod1 F4 :workspace 4
mod1 F5 :workspace 5
mod1 F6 :workspace 6
mod1 F7 :workspace 7
mod1 F8 :workspace 8
mod4 F1 :taketoworkspace 1
mod4 F2 :taketoworkspace 2
mod4 F3 :taketoworkspace 3
mod4 F4 :taketoworkspace 4
mod4 F5 :taketoworkspace 5
mod4 F6 :taketoworkspace 6
mod4 F7 :taketoworkspace 7
mod4 F8 :taketoworkspace 8

# fluxbox bindings
mod4 slash :rootmenu
#mod4 grave :exec fbrun -font "silkscreen-6" -w 200 -pos 620 440
mod4 r :reconfigure
mod4 q :close
mod4 ctrl q :kill
mod4 w :clientmenu (workspace=[current])

# terminal bindings
mod4 Return :if {some matches (lilyterm) (title!=console) (workspace=[current])} {nextwindow (lilyterm) (title!=console) (workspace=[current])} {exec start-terminal}
mod4 apostrophe :exec start-terminal
mod4 backslash :exec start-environment-terminal
mod4 bracketleft :exec start-terminal _default
mod4 bracketright :exec start-terminal _last

# gvim bindings
mod4 space :if {some matches (gvim) (workspace=[current])} {nextwindow (gvim) (workspace=[current])} {exec gvim}
mod4 v :exec gvim
mod4 p :exec launch-project

# application bindings
mod4 c :if {some matches (Chromium) (workspace=[current])} {nextwindow (Chromium) (workspace=[current])} {exec chromium}
mod4 f :if {some matches (Navigator) (workspace=[current])} {nextwindow (Navigator) (workspace=[current])} {exec firefox}
mod4 k :if {some matches (.*[.]slack[.]com__messages) (workspace=[current])} {activate (.*[.]slack[.]com__messages) (workspace=[current])} {exec slack}
mod4 s :if {some matches (skype) (role=ConversationsWindow)} {activate (skype) (role=ConversationsWindow)} {if {some matches (skype)} {activate (skype)} {exec secured-skype}}}
mod4 Print :exec fbsetbg -r $HOME/.wallpapers
